.medicine_search{
  position: relative;
  background: #fff;
  z-index: 120;
  width: 750rpx;
  height: 88rpx;
  border-top: 4rpx solid #f5f5f5;
  border-bottom: 4rpx solid #f5f5f5;
  display: flex;
  justify-content: center;
  align-items: center;
}
.medicine_search_box{
  position: relative;
  z-index: 120;
  width: 690rpx;
  height: 60rpx;
  border-radius: 50rpx;
  background: #f5f5f5;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.medicine_search_box image{
  position: relative;
  z-index: 120;
  margin-top: 2rpx;
  width:34rpx;
  height: 34rpx;
  margin-left: 21rpx;
}
.medicine_search_box input{
  line-height: 60rpx;
  font-size: 28rpx;
  color: #9B9B9B;
  margin-left: 20rpx;
  letter-spacing:2rpx;
  width: 600rpx;
}
.medicine_list{
  width: 690rpx;
  height: 100rpx;
  border-bottom: 2rpx solid #f5f5f5;
  margin: 0 30rpx;
  color: #4A4A4A;
  font-size: 32rpx;
  line-height: 100rpx;
  display: flex;
  justify-content:space-between;
  align-items: center;
}
.medicine_list_right{
  color: #666666;
  font-size: 30rpx;
}
.noMore{
  width: 750rpx;
  font-size: 30rpx;
  line-height: 500rpx;
  text-align: center;
}