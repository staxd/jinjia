
.classical_list{
  width: 750rpx;
  min-height: 100rpx;
  border-bottom: 2rpx solid #f5f5f5;
  margin-left: 30rpx;
  color: #9B9B9B;
  font-size: 32rpx;
  line-height: 100rpx;
}
.classical_list_right{
  position: absolute;
  right: 30rpx;
  margin-top: -60rpx;
   content: " ";
  display: inline-block;
  height: 16rpx;
  width: 16rpx;
  border-width: 4rpx 4rpx 0 0;
  border-color: #c7c7cc;
  border-style: solid;
  transform: rotate(45deg);
  -webkit-transform: rotate(45deg);
}
.classical_title{
  width: 750rpx;
  height: 88rpx;
  background: #f5f5f5;
  color: #4a4a4a;
  font-size: 30rpx;
  line-height: 88rpx;
  padding-left: 30rpx;
}