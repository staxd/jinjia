button {
  margin-top: 58rpx;
width: 640rpx;
height: 80rpx;
position:relative;
display:block;
margin-left:auto;
margin-right:auto;
padding-left:14px;
padding-right:14px;
box-sizing:border-box;
font-size: 34rpx;
text-align:center;
text-decoration:none;
line-height: 80rpx;
border-radius:50rpx;
-webkit-tap-highlight-color:transparent;
overflow:hidden;
