page{
background: #f5f5f5;
}
.alterBox input{
  width: 500rpx;
}
.alterBox{
  width: 750rpx;
  min-height: 88rpx;
  background: #fff;
  border-top: 4rpx solid #f5f5f5
}
.alterBox_name,.alterBox_sex,.alterBox_age{
  width: 750rpx;
  height: 88rpx;
  border-bottom: 2rpx solid  #e1e1e1;
  margin-left: 30rpx;
  font-size: 30rpx;
  line-height: 88rpx;
  color: #36353A;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.alterBox_name input,.alterBox_age input{
  margin-left: 46rpx;
}
.alterBox_sex_man{
  margin: 0 100rpx 0 46rpx;
}

radio {
  transform:scale(0.7);
}
.ul{
  border: none
}
.alterDisease{
  width: 750rpx;
  height: 170rpx;
  background: #fff;
  margin-top: 20rpx;
  font-size: 30rpx;
  color: #36353A;
  padding: 30rpx 0 0rpx 31rpx;
}
.alterDisease textarea{
  margin-top: 14rpx;
}
textarea {
  width:690rpx;
height:100rpx;

}
button {
  margin-top: 58rpx;
width: 640rpx;
height: 80rpx;
position:relative;
display:block;
margin-left:auto;
margin-right:auto;
padding-left:14px;
padding-right:14px;
box-sizing:border-box;
font-size: 34rpx;
text-align:center;
text-decoration:none;
line-height: 80rpx;
border-radius:50rpx;
-webkit-tap-highlight-color:transparent;
overflow:hidden;
color:#000000;
background-color:#F8F8F8;
}
button[type=warn] {
color:#FFFFFF;
background-color:rgba(193,92,62,1);
}
.alterDelect{
  width: 120rpx;
  height: 45rpx;
  color: #C15C3E;
  font-size: 30rpx;
  left: 0;
  right: 0;
  margin: 85rpx auto 0;
}