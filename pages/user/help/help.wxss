page{
  background: #f5f5f5;
}
.kind-list-item {
  margin-top: 20rpx;
  background-color: #fff;
  overflow: hidden;
  border-bottom: 1px solid #f5f5f5;
}
.kind-list-item-hd {
  width: 750rpx;
  height: 88rpx;
  padding-left: 15rpx;
  color: #4A4A4A;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  transition: opacity 0.3s;
  margin-left: 30rpx;
  border-bottom: 2rpx solid #e7e7e7;
}
.navigator-arrow-show {
  position: absolute;
  right: 40rpx;
}
.navigator-arrow-show:after {
  content: " ";
  display: inline-block;
  height: 14rpx;
  width: 14rpx;
  border-width: 4rpx 4rpx 0 0;
  border-color: #c7c7cc;
  border-style: solid;
  transform: rotate(-45deg);
  -webkit-transform: rotate(-45deg);
}
.navigator-arrow {
  position: absolute;
  right: 40rpx;
}

.navigator-arrow:after {
  content: " ";
  display: inline-block;
  height: 14rpx;
  width: 14rpx;
  border-width: 4rpx 4rpx 0 0;
  border-color: #c7c7cc;
  border-style: solid;
  transform: rotate(135deg);
  -webkit-transform: rotate(135deg);
}
.kind-list-item-bd-show {
  height: auto;
}
.kind-list-item-bd {
  height: 0;
  overflow: hidden;
}
.navigator-show{
  left: 0;
  right: 0;
  margin: 26rpx auto;
  font-size: 26rpx;
  color: #9B9B9B;
  width: 682rpx;
}







