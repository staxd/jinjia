page{
  background: #f5f5f5;
}

.invite{
  margin-top: 10rpx;
  width: 750rpx;
  height: 680rpx;
  background: #fff;
  border: 1rpx solid #fff;
}
.invite_title{
  color: #36353A;
  font-size: 34rpx;
  margin-top: 40rpx;
  text-align: center;
}
.invite_content{
  font-size: 30rpx;
  color: #36353A;
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
}
.invite_content_num,.invite_content_time{
  color: red;
}
.invite_pic{
  width:346rpx;
  height: 165rpx;
  left: 0;
  right: 0;
  margin: 60rpx auto 138rpx;
  color:rgba(102,102,102,1);
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.invite_pic_box{
  width: 100rpx;
  height: 165rpx;
  font-size: 20rpx;
  text-align: center;
}
.invite_pic_box_img{
  width: 100rpx;
  height: 100rpx;
  background: #f5f5f5;
  border-radius: 50%;
  border: 1rpx dashed #36353A;
  margin-bottom: 22rpx;
}
button {
width: 640rpx;
height: 80rpx;
position:relative;
display:block;
margin-left:auto;
margin-right:auto;
padding-left:14px;
padding-right:14px;
box-sizing:border-box;
font-size: 34rpx;
text-align:center;
text-decoration:none;
line-height: 80rpx;
border-radius:50rpx;
-webkit-tap-highlight-color:transparent;
overflow:hidden;
color:#000000;
background-color:#F8F8F8;
}
button[type=warn] {
color:#FFFFFF;
background-color:rgba(193,92,62,1);
}
