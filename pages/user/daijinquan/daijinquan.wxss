page{
  border-top: 4rpx solid rgba(0,0,0,.05);
  background: #f5f5f5;
}
.quan{
  width:750rpx;
  height:100rpx;
  background:rgba(255,255,255,1);
  font-size: 30rpx;
  color: #4A4A4A;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.quan_box{
  width: 250rpx;
  height: 100rpx;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
}
.quan_title{
  position: absolute;
  bottom: 0;
  left: 85rpx;
  height: 2rpx;
  width: 80rpx;
  
}
.cor{
  color: #c15c3e;
}
.bg{
  background: #c15c3e;
}
.quan_Detail{
  width: 710rpx;
  height: 200rpx;
  background: #fff;
  left: 0;
  right: 0;
  margin: 20rpx auto;
  display: flex;
  flex-direction: row;
}
.quan_Detail_left{
  width: 240rpx;
  height: 200rpx;
  
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 80rpx;
  color: #fff;
}
.wei{
  background:linear-gradient(315deg,rgba(255,128,80,1) 0%,rgba(193,92,62,1) 100%);
}
.yi{
  background:rgba(189,189,189,1);
}
.quan_Detail_left text{
  font-size: 24rpx;
  line-height: 60rpx;
}
.quan_Detail_right{
  width: 470rpx;
  height: 200rpx;
  display: flex;
  flex-direction: column;

}
.quan_Detail_right_title{
  height: 44rpx;
  width: 420rpx;
  margin: 30rpx 30rpx 60rpx 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 26rpx;
  color: #4A4A4A;
  line-height: 44rpx;
}
.quan_Detail_right_title view{
  width:118rpx;
height:44rpx;
background:rgba(255,255,255,1);
border-radius:30rpx;
border:1rpx solid rgba(151,151,151,1);
font-size: 20rpx;
display: flex;
justify-content: center;
align-items: center;
color: #4A4A4A;
}
.quan_Detail_right_title image{
  width: 118rpx;
  height: 118rpx;
}
.quan_Detail_right_content{
  display: flex;
  flex-direction: row;
  font-size: 20rpx;
  color: #4A4A4A;
  margin-left: 20rpx;
}
.noMore-text{
  text-align: center;
  line-height: 500rpx;
  font-size: 30rpx;
}