<view class="quan">
  <view data-id="{{index}}" bindtap='quanSelect' class="quan_box {{item.select?'cor':''}}" wx:for="{{status}}" wx:key="*this">{{item.name}}<view class="quan_title {{item.select?'bg':''}}"></view></view>
</view>
<view wx:for="{{status}}">
  <block wx:if="{{item.select == true&&item.index == 0}}">
    <block wx:if="{{userCouponList0.length!=0}}">
    <view class='quan_Detail' wx:for="{{userCouponList0}}" wx:key="*this">
      <view class='quan_Detail_left wei'>
      <view><text>￥</text>{{item.discount_amount}}</view><text>使用门槛</text>
      </view>
      <view class='quan_Detail_right'>
        <view class='quan_Detail_right_title'>代金券<view bindtap="gozizhen">立即使用</view></view>
        <view class='quan_Detail_right_content'>有效期:<view>{{item.created_time}}至{{item.expire_time}}</view></view>
      </view>
    </view>
  </block>
  <block wx:else>
      <view class='noMore-text'>暂无内容</view>
  </block>
  </block>
  <block wx:elif="{{item.select == true&&item.index == 1}}">

    <block wx:if="{{userCouponList1.length!=0}}">
 
 <view class='quan_Detail' wx:for="{{userCouponList1}}" wx:key="*this">
