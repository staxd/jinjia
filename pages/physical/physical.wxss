page {
  width: 750rpx;
  height: 100%;
  background: #f5f5f5;
  
}
.physical{
  border-top: 10rpx solid #f5f5f5;
  width: 750rpx;
  background: #fff;
}
.physical-box{
 margin-bottom: 20rpx;
}
.physical-box-content{
  width: 100%;
  display: flex;
  flex-direction: column;
  margin-bottom: 120rpx;
}
.physical-box-content-up{
  margin-left: 30rpx;
  width: 720rpx;
  height: 88rpx;
  border-bottom: 4rpx solid #f5f5f5;
  font-size: 30rpx;
  line-height: 88rpx;
}
.physical-box-content-down{
  padding-bottom: 30rpx;
  margin-left: 30rpx;
width: 750rpx;
min-height: 88rpx;
float: left;

}
.physical-box-content-down-button{
  width: 150rpx;
  height: 52rpx;
  /* background:rgba(193,92,62,1); */
  border:1rpx solid #BDBDBD;
  border-radius:100rpx;
  font-size: 28rpx;
  text-align: center;
  color:#BDBDBD;
  line-height: 52rpx;
  margin: 30rpx 30rpx 0rpx 0;
  float: left;
}
.active{
  border:1rpx solid rgba(193,92,62,1);
  background:rgba(193,92,62,1);
  color: #fff;
}
.sub{
  width: 750rpx;
  height: 120rpx;
  background: #fff;
  position: fixed;
  bottom: 0;
  z-index: 100;
}
.sub_btn{
  width: 640rpx;
  height: 80rpx;
  left: 0;
  right: 0;
  margin: 20rpx auto;
  background:rgba(193,92,62,1);
  border-radius: 50rpx;
  font-size: 34rpx;
  line-height: 80rpx;
  text-align: center;
  color: #fff;
}
.kk{
