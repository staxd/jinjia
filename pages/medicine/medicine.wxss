}
.medicine_list_right{
  position: absolute;
  right: 30rpx;
  margin-top: 42rpx;
   content: " ";
  display: inline-block;
  height: 16rpx;
  width: 16rpx;
  border-width: 4rpx 4rpx 0 0;
  border-color: #c7c7cc;
  border-style: solid;
  transform: rotate(45deg);
  -webkit-transform: rotate(45deg);
}


